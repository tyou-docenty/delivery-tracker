{
  "version": 2,
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "commands": {
      "build": "pnpm --filter @delivery-tracker/server build-with-deps"
    }
  },
  "functions": {
    "api/graphql.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/graphql",
      "dest": "/api/graphql.js"
    }
  ],
  "outputDirectory": "packages/server"
}
