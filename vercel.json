{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["packages/server/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "packages/server/dist/index.js"
    }
  ],
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm run --filter @delivery-tracker/server build-with-deps",
  "env": {
    "NODE_ENV": "production"
  }
}
