{
  "version": 2,
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "buildCommand": "pnpm --filter @delivery-tracker/server build-with-deps",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api",
      "dest": "/api/index.js"
    }
  ],
  "outputDirectory": "app/packages/server"
}
