{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/packages/server/dist/$1"
    }
  ],
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm --filter @delivery-tracker/server build-with-deps",
  "env": {
    "NODE_ENV": "production"
  },
  "cache": {
    "paths": ["pnpm-lock.yaml", "node_modules"]
  }
}
